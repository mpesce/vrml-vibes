#VRML V1.0 ascii

Separator {
    DirectionalLight {
        direction 0 -1 -1
    }
    
    Material {
        diffuseColor 0.8 0.2 0.2
    }
    
    Coordinate3 {
        point [
            -1 0 1,  # 0: front left
             1 0 1,  # 1: front right
             1 0 -1, # 2: back right
            -1 0 -1, # 3: back left
             0 2 0   # 4: top
        ]
    }
    
    IndexedFaceSet {
        coordIndex [
            0, 1, 4, -1,  # Front face
            1, 2, 4, -1,  # Right face
            2, 3, 4, -1,  # Back face
            3, 0, 4, -1,  # Left face
            3, 2, 1, 0, -1 # Bottom face (quad)
        ]
    }
}
